@model Sistema_Inmobiliaria.Models.Contacto

@{
    Layout = null; // Esto evita que se aplique el layout predeterminado
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Contacto</title>
    <link href="~/Content/css/contacto.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("Encabezado") <!-- Incluir encabezado -->

    <section>
        <div class="formulario">
            <h2>RESERVAR CITA</h2>
            @using (Html.BeginForm("EnviarCorreo", "Home", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => m.Nombre, new { placeholder = "Nombre", required = "required" })
                @Html.TextBoxFor(m => m.Telefono, new { placeholder = "Telefono", required = "required" })
                @Html.TextBoxFor(m => m.Correo, new { placeholder = "Correo", type = "email", required = "required" })
                @Html.TextBoxFor(m => m.Asunto, new { placeholder = "Asunto", required = "required" })
                @Html.TextAreaFor(m => m.Mensaje, new { placeholder = "Mensaje", required = "required" })
                <input type="submit" id="enviar" value="Enviar" class="boton">
            }
        </div>
    </section>

    @Html.Partial("PiePagina") <!-- Incluir pie de página -->
</body>
</html>