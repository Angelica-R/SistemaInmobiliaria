@model IEnumerable<Sistema_Inmobiliaria.Models.inmuebles>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>THIAGO-Inversiones e Inmobiliaria</title>
    <link href="~/Content/css/catalogo.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/3a40882597.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="~/Content/img/logo.png" />
</head>
<body>
    @Html.Partial("Encabezado")

    <br /><br /><br /><br /><br /><br />

    <section class="section-products">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="header">
                    <h3>Descubre nuestros inmuebles</h3>
                </div>
            </div>

            <div class="row">
                @foreach (var casa in Model)
                {
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div id="product-@casa.idinmueble" class="single-product">
                            <div class="part-1">
                                <ul>
                                    <a href="@Url.Action("Detalles", "Inmuebles", new { id = casa.idinmueble })">
                                        <img class="imagen_forma" src="~/Content/img/@casa.imagen" alt="" />
                                    </a>
                                </ul>
                            </div>
                            <div class="part-2">
                                <a href="@Url.Action("Detalles", "Inmuebles", new { id = casa.idinmueble })">
                                    <h4 class="info">@casa.titulo</h4>
                                </a>
                                <br />
                                <h4 class="info">@casa.precio</h4>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    @Html.Partial("PiePagina")

</body>
</html>

