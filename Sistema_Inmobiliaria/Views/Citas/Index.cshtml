@model IEnumerable<Sistema_Inmobiliaria.Models.citas>

@{
    ViewBag.Title = "Lista de Citas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .icon-white {
        color: white !important;
    }

    .container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .card-header {
        margin-top: 20px;
    }
</style>
<div class="container">
    <h2 class="text-center"> Citas</h2>

    <table id="DatatableCitas" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Local</th>
                <th>Fecha</th>
                <th>Hora</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var cita in Model)
                {
                    <tr>
                        <td>@cita.codcita</td>
                        <td>@cita.clientes.cliNombre</td>
                        <td>@cita.locales.localNombre</td>
                        <td>@cita.fecha.ToString("yyyy-MM-dd")</td>
                        <td>@cita.hora.ToString(@"hh\:mm")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No hay citas disponibles.</td></tr>
            }

        </tbody>
    </table>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#DatatableCitas').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });
    </script>
}
