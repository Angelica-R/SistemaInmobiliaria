@model Sistema_Inmobiliaria.Models.clientes

@{
    Layout = null; // Para deshabilitar el uso de un layout compartido
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>THIAGO-Inversiones e Inmobiliaria</title>
    <link href="~/Content/css/registrar.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/Content/img/logo.png">
    
</head>
<body>
    @Html.Partial("Encabezado")

    <br /><br />
    <div class="login">
        <div class="login-triangle"></div>
        <h2 class="login-header">Regístrate</h2>
        @using (Html.BeginForm("Registrar", "Cliente", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="login-container">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <p>@Html.TextBoxFor(model => model.cliDni, new { placeholder = "DNI", maxlength = "8", minlength = "8" })</p>
                @Html.ValidationMessageFor(model => model.cliDni, "", new { @class = "text-danger" })

                <p>@Html.TextBoxFor(model => model.cliNombre, new { placeholder = "Nombres" })</p>
                @Html.ValidationMessageFor(model => model.cliNombre, "", new { @class = "text-danger" })

                <p>@Html.TextBoxFor(model => model.cliApellido, new { placeholder = "Apellidos" })</p>
                @Html.ValidationMessageFor(model => model.cliApellido, "", new { @class = "text-danger" })

                <p>@Html.TextBoxFor(model => model.cliTelefono, new { placeholder = "Celular" })</p>
                @Html.ValidationMessageFor(model => model.cliTelefono, "", new { @class = "text-danger" })

                <p>@Html.TextBoxFor(model => model.cliEmail, new { placeholder = "Email" })</p>
                @Html.ValidationMessageFor(model => model.cliEmail, "", new { @class = "text-danger" })

                <p>@Html.PasswordFor(model => model.cliClave, new { placeholder = "Contraseña", maxlength = "10" })</p>
                @Html.ValidationMessageFor(model => model.cliClave, "", new { @class = "text-danger" })

                <p><input type="submit" value="Registrar" name="registrar"></p>
            </div>
        }
        
        <a class="registrar" href="@Url.Action("Login", "Cliente")">¿Ya tienes una cuenta? Inicia sesión</a>
    </div>

    <!-- Pie de página -->
    @Html.Partial("PiePagina")

</body>
</html>

