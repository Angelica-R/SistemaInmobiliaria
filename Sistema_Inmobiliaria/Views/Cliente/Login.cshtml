@{
    Layout = null; // Para deshabilitar el uso de un layout compartido
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>THIAGO-Inversiones e Inmobiliaria</title>
    <link rel="stylesheet" href="~/Content/css/login.css">
    <link rel="icon" type="image/png" href="~/Content/img/logo.png">
</head>
<body>

    <!-- Encabezado -->
    @Html.Partial("Encabezado")

    <div class="login">
        <div class="login-triangle"></div>
        <h2 class="login-header">Iniciar sesión</h2>
        <form class="login-container" id="form_login" method="post" action="@Url.Action("Login", "Cliente")">
            <p><input type="email" placeholder="Email" name="email" required></p>
            <p><input type="password" placeholder="Contraseña" name="password" required></p>
            <p><input type="submit" value="Ingresar" name="button"></p>
            <br/>
            <a class="registrar" href="@Url.Action("Registrar", "Cliente")">¿No tienes una cuenta? Registrate</a>
        </form>
    </div>

    <!-- Pie de página -->
    @Html.Partial("PiePagina")

</body>
</html>


